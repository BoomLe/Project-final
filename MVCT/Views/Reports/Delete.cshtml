@using MVCT.Models.UserReport;
@model UserReports


<form asp-action="Delete">
    <br />
    <div class="Container border p-3">
        <h1 class="text-secondary text-center">Báo Cáo</h1>
        <input asp-for="Id" hidden/>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Tiêu đề</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Description" class="form-control" />
               
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Nội dung</label>
            </div>
            <div class="col-10 pb-3">
                
                <textarea rows="5" disabled asp-for="Messages" class="form-control" ></textarea>
              
            </div>
  
            <div class="col-5 offset-2">
                <input type="submit" value="Xóa" class="btn btn-danger form-control" />

            </div>
            <div class="col-5 ">

                <a asp-controller="Reports" asp-action="Index" class="btn-primary btn form-control ">Danh sách báo cáo </a>
            </div>
           

        </div>

        <div>
        </div>
    </div>
</form>