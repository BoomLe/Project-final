@using MVCT.Models.UserReport;
@model UserReportsViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Báo cáo</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="CreateReport" method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
               
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2 h3">Tiêu Đề</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                   
                    <textarea rows="5" asp-for="Messages" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Messages" class="ms-2 h3">Nội dung</label>
                    <span asp-validation-for="Messages" class="text-danger"></span>
                </div>

                <div class="row pt-2 p-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Lưu</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                       Trang chủ
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}